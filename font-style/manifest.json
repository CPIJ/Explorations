{
    "manifest_version": 2,
    "name": "Page Fontstyle",
    "version": "1.0",
    "description": "An extension for changing fonts on webpages.",
    "icons": {
        "128": "assets/icons/128.png",
        "48": "assets/icons/48.png",
        "16": "assets/icons/16.png"
    },
    "page_action": {
        "default_icon": "assets/icons/16.png",
        "default_popup": "public/index.html",
        "default_title": "Page Fontstyle"
    },
    "background": {
        "scripts": ["public/js/event-page.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://developer.chrome.com/*"],
            "js": ["public/js/content.js", "node_modules/jquery/dist/jquery.min.js"],
            "css": ["public/css/content.css"]
        }
    ], 
    "permissions": [
        "tabs",
        "https://developer.chrome.com/*"
    ]
}