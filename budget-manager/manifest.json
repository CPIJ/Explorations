{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    "description": "A manager for your budget",
    "icons": {
        "128": "assets/icons/128.png",
        "48": "assets/icons/48.png",
        "16": "assets/icons/16.png"
    },

    "browser_action": {
        "default_icon": "assets/icons/16.png",
        "default_popup": "public/index.html"
    },

    "options_page": "public/html/options.html",

    "background": {
        "scripts": ["public/js/context-menu.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}